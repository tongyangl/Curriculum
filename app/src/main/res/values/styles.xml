<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CardView.FullWidth" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>

        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.Actionbar" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="actionMenuTextColor">#fff</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.actionMenuTextSize</item>

    </style>
    <style name="theme_pink" parent="AppTheme.Actionbar">
           <item name="mytheme">@color/theme_pink</item>
    </style>
    <style name="theme_yellow" parent="AppTheme.Actionbar">
        <item name="mytheme">@color/theme_yellow</item>
    </style>
    <style name="theme_blue" parent="AppTheme.Actionbar">
        <item name="mytheme">@color/theme_blue</item>
    </style>
    <style name="theme_green" parent="AppTheme.Actionbar">
        <item name="mytheme">@color/theme_green</item>
    </style>
    <style name="theme_purple" parent="AppTheme.Actionbar">
        <item name="mytheme">@color/theme_purple</item>
    </style>
    <style name="theme_red" parent="AppTheme.Actionbar">
        <item name="mytheme">@color/theme_red</item>
    </style>
    <style name="AppTheme.actionMenuTextSize" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
