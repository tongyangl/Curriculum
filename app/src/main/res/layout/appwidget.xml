                    android:ems="1"
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                </TextView> <TextView
                    android:gravity="center"
                    android:textSize="13sp"
                    android:ems="1"
                    android:text="7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                </TextView> <TextView
                    android:gravity="center"
                    android:textSize="13sp"
                    android:ems="1"
                    android:text="8"
