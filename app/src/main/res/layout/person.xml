<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/per"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/layout"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progerss"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/getpic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:clickable="true"
            android:gravity="center"
            android:text="点我获取头像"
            android:textColor="@color/colorPrimary" />

        <ImageView

            android:id="@+id/personpic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/person_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/person_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/person_3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/person_4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/person_5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/person_6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/person_7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/person_8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="设置"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <ListView

            android:id="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="其他"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

</LinearLayout>
