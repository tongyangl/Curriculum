<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/mytheme"
            android:fitsSystemWindows="true"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_zc"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:drawablePadding="-5dp"
                    android:drawableRight="@drawable/text_up"
                    android:gravity="center"
                    android:text="第1周"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/hscroview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#F0F8FF"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/resetzc"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:clickable="true"
                android:drawableTop="@drawable/btn_radio_change"

                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="当前周"
                android:textSize="12sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0FFFF"
                android:scrollbars="none">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                </RadioGroup>
            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/top"

            android:background="?attr/mytheme"
            android:orientation="horizontal">

            <!--android:background="#FFFAF0"-->


            <TextView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:ems="1"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="12sp" />


            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周一"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="周二"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="周三"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周四"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周五"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周六"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周天"
                android:textColor="#FFF" />


        </LinearLayout>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/week">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/kb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/jieci"
                        layout="@layout/jieci">

                    </include>

                    <include
                        android:id="@+id/one"
                        layout="@layout/kecheng">

                    </include>

                    <include
                        android:id="@+id/two"
                        layout="@layout/kecheng">

                    </include>

                    <include
                        android:id="@+id/three"
                        layout="@layout/kecheng">

                    </include>

                    <include
                        android:id="@+id/four"
                        layout="@layout/kecheng">

                    </include>

                    <include
                        android:id="@+id/five"
                        layout="@layout/kecheng">

                    </include>

                    <include
                        android:id="@+id/six"
                        layout="@layout/kecheng">

                    </include>

                    <include
                        android:id="@+id/seven"
                        layout="@layout/kecheng">

                    </include>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/kb"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ems="1"
                        android:gravity="center"
                        android:text="备注" />

                    <TextView
                        android:id="@+id/beizhu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:textColor="#FF3030" />
                </LinearLayout>
            </RelativeLayout>


        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/ngv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginRight="20dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:scrollbars="none"
        app:headerLayout="@layout/ngv_header"
        app:menu="@menu/nav_menu"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

