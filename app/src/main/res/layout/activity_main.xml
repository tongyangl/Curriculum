<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@drawable/maidou"
    android:orientation="vertical"
    tools:context="curriculum.jichuang.tongyang.com.curriculum.MainActivity">

    <TextView
        android:id="@+id/School"
      android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="逃   课  表" />
  <RelativeLayout
      android:focusableInTouchMode="true"
      android:focusable="true"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView

          android:id="@+id/number_1"
          android:textSize="20sp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="50dp"
          android:text="学号"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <EditText
          android:hint="请输入学号"
          android:imeOptions="actionDone"
          android:inputType="number"
          android:singleLine="true"
          android:id="@+id/number"
          android:layout_marginRight="40dp"
          android:layout_toRightOf="@+id/number_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:layout_marginTop="12dp"
          android:id="@+id/passname_1"
          android:textSize="20sp"
          android:layout_marginLeft="50dp"
          android:layout_below="@+id/number_1"
          android:text="密码"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <EditText
          android:inputType="textPassword"
           android:hint="请输入密码"
          android:singleLine="true"
          android:imeOptions="actionDone"
          android:layout_marginRight="40dp"
          android:id="@+id/passname"
          android:layout_below="@id/number"
          android:layout_toRightOf="@+id/passname_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <CheckBox
          android:layout_marginTop="10dp"
          android:id="@+id/remember"
          android:layout_marginLeft="50dp"
          android:text="记住密码"
          android:layout_below="@+id/passname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <CheckBox
          android:layout_marginTop="10dp"
          android:layout_marginLeft="200dp"
          android:layout_below="@id/passname"
          android:text="自动登录"
          android:id="@+id/a_login"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <Button
          android:background="@drawable/button_login"
          android:id="@+id/land"
          android:layout_marginRight="30dp"
          android:layout_marginLeft="30dp"
          android:text="登                                  陆"
          android:layout_marginTop="30dp"
          android:layout_below="@+id/remember"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />


  </RelativeLayout>

</LinearLayout>
